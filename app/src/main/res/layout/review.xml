<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" >

    <TextView
        android:id="@+id/review_tv_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:theme="@style/BlackOnWhiteThemeWithPadding"
        android:textSize="24dp"
        android:textStyle="bold"
        tools:text="Author" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_tv_author"
        app:layout_constraintBottom_toBottomOf="parent"

        android:theme="@style/AppThemeWithPadding"
        android:background="@color/colorPrimaryDark" >

        <TextView
            android:id="@+id/review_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="16sp"
            tools:text="Review" />

    </ScrollView>

</android.support.constraint.ConstraintLayout>